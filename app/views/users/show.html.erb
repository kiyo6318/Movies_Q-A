<div class="h3">
  <%= @user.name %>
</div>
<div>
  質問数 <%= @user.questions.count %>
</div>
<div>
  回答数 <%= @user.answers.count %>
</div>
<div class="best_answer">
  ベストアンサー <%= @user.best_answers_count %>
</div>
<% if @user == current_user %>
<div>
  <%= link_to "プロフィール編集",edit_user_path(@user), class: "btn btn-info btn-sm" %>
</div>
<div class="table-responsive">
  <table class="table table-hover">
    <% @user.questions.each do |question| %>
    <tr>
      <td>
        <%= question.status_i18n %>
        <%= link_to question.title,question_path(question) %>
        <br>
        <% question.labels.each do |label| %>
        <%= label.genre %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
<% end %>