<% breadcrumb :relations_user,@user %>
<div class="container">
  <h3><%= @user.name %>のつながり</h3>
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <a href="#following" class="nav-link active" data-toggle="tab">フォロー</a>
    </li>
    <li class="nav-item">
      <a href="#followers" class="nav-link" data-toggle="tab">フォロワー</a>
    </li>
  </ul>
  <div class="tab-content">
    <div id="following" class="tab-pane active">
      <div class="table-responsive">
      <table class="table table-hover">
        <% @user.following.each do |followed| %>
          <tr>
            <td>
              <%= link_to followed.name,user_path(followed.id),class: "btn" %>
              <span class="best_answer">ベストアンサー <%= followed.best_answers_count %></span>
            </td>
          </tr>
        <% end %>
      </table>
      </div>
    </div>
    <div id="followers" class="tab-pane">
      <% @user.followers.each do |follower| %>
        <%= link_to follower.name,user_path(follower.id) %>
      <% end %>
    </div>
  </div>
</div>