<%= form_with(model: @user,local: true) do |f| %>
  <% if @user.errors.any? %>
  <h2><%= @user.errors.count %>件のエラーがあります。</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  <div class="form-group">
    <span><%= f.label :name %></span>
    <span><%= f.text_field :name ,class:"form-control",style:"width:300px"%></span>
  </div>

  <div class="form-group">
    <span><%= f.label :email %></span>
    <span><%= f.text_field :email ,class:"form-control",style:"width:300px" %></span>
  </div>

  <div class="form-group">
    <span><%= f.label :password %></span>
    <span><%= f.password_field :password ,class:"form-control",style:"width:300px"%></span>
  </div>

  <div class="form-group">
    <span><%= f.label :password_confirmation %></span>
    <span><%= f.password_field :password_confirmation ,class:"form-control",style:"width:300px"%></span>
  </div>

  <div class="d-flex justify-content-center">
   <span><%= f.submit class:"btn btn-primary" %></span>
  </div>
<% end %>